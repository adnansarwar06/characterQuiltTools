# Server Configuration
APP_HOST=localhost
APP_PORT=8000
DEBUG_MODE=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Configuration
API_TIMEOUT=30
MAX_REQUEST_SIZE=1048576

# Streaming Configuration
STREAMING_DELAY=0.05

# Logging Configuration
LOG_LEVEL=INFO

# Research Agent Configuration
MAX_RESEARCH_ITERATIONS=10
RESEARCH_TIMEOUT=300

# Tool Configuration
AVAILABLE_TOOLS=web_search,file_write,weather

# LLM Configuration
LLM_MODEL=gpt-4-1106-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# OpenAI Configuration
OPENAI_BASE_URL=https://api.openai.com/v1  # Optional, defaults to OpenAI
API_KEY=sk-your-openai-api-key-here

# External API URLs Configuration
DUCKDUCKGO_API_URL=https://api.duckduckgo.com/
DUCKDUCKGO_SEARCH_URL=https://html.duckduckgo.com/html/
OPENMETEO_GEOCODING_URL=https://geocoding-api.open-meteo.com/v1/search
OPENMETEO_WEATHER_URL=https://api.open-meteo.com/v1/forecast

# File Operations Configuration
FILE_OUTPUT_DIR=./output
MAX_FILE_SIZE=10485760

# Security Configuration
SECRET_KEY=your-secret-key-here

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Database Configuration (optional)
# DATABASE_URL=sqlite:///./app.db

# Database Pool Configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30 